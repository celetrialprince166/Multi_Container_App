{
  "__inputs": [],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "10.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    },
    {
      "type": "datasource",
      "id": "cloudwatch",
      "name": "CloudWatch",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    }
  ],
  "title": "Notes ECS Observability",
  "description": "ECS backend RED metrics (Prometheus) and ECS service CPU/memory (CloudWatch).",
  "editable": true,
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Application RED Metrics",
      "type": "row"
    },
    {
      "type": "stat",
      "title": "Requests / sec (ECS backend)",
      "id": 1,
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total{job=\"notes-backend-ecs\"}[5m]))",
          "legendFormat": "RPS"
        }
      ]
    },
    {
      "type": "stat",
      "title": "HTTP 5xx Error Rate",
      "id": 2,
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(\n  sum(rate(http_requests_total{job=\"notes-backend-ecs\",status_code=~\"5..\"}[5m]))\n  /\n  sum(rate(http_requests_total{job=\"notes-backend-ecs\"}[5m]))\n)",
          "legendFormat": "5xx rate"
        }
      ]
    },
    {
      "type": "stat",
      "title": "P95 Latency (seconds)",
      "id": 3,
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.3 },
              { "color": "red", "value": 1.0 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"notes-backend-ecs\"}[5m])) by (le))",
          "legendFormat": "P95"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 200,
      "title": "ECS Cluster / Service (CloudWatch)",
      "type": "row"
    },
    {
      "type": "timeseries",
      "title": "ECS Service CPU Utilization",
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": {
        "type": "cloudwatch",
        "uid": "cloudwatch"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "namespace": "AWS/ECS",
          "metricName": "CPUUtilization",
          "dimensions": {
            "ClusterName": "dev-notes-app-ecs-cluster",
            "ServiceName": "dev-notes-app-service"
          },
          "region": "eu-west-1",
          "stat": "Average"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "ECS Service Memory Utilization",
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": {
        "type": "cloudwatch",
        "uid": "cloudwatch"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "namespace": "AWS/ECS",
          "metricName": "MemoryUtilization",
          "dimensions": {
            "ClusterName": "dev-notes-app-ecs-cluster",
            "ServiceName": "dev-notes-app-service"
          },
          "region": "eu-west-1",
          "stat": "Average"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s"
}

